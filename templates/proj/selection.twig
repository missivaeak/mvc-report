{% extends "proj/partials/base.twig" %}
{% block view %}selection{% endblock %}
{% block body %}
    {% for challenger in selection %}
        {% set stats = challenger["stats"] %}
        <form method="post">
            <input type="text" style="display: none;" name="name" value="{{challenger["name"]}}">
            <input type="number" style="display: none;" name="intelligence" value="{{stats["intelligence"]}}">
            <input type="number" style="display: none;" name="strength" value="{{stats["strength"]}}">
            <input type="number" style="display: none;" name="dexterity" value="{{stats["dexterity"]}}">
            <input type="number" style="display: none;" name="luck" value="{{stats["luck"]}}">
            <input type="number" style="display: none;" name="speed" value="{{stats["speed"]}}">
            <input type="number" style="display: none;" name="constitution" value="{{stats["constitution"]}}">
            <table class="challenger hoverable" onclick="this.parentNode.submit();">
                <thead>
                    <tr>
                        <th colspan="3">{{challenger["name"]}}</th>
                    </tr>
                <thead>

                <tbody>
                    <tr><td class="spacer" colspan="3"></td></tr>
                    <tr class="stat">
                        <td>
                            Intelligens
                        </td>
                        <td>
                            {{stats["intelligence"]}}
                        </td>
                        <td>
                            <i class="fa-solid fa-brain"></i>
                        </td>
                    </tr>
                    <tr class="stat">
                        <td>
                            Styrka
                        </td>
                        <td>
                            {{stats["strength"]}}
                        </td>
                        <td>
                            <i class="fa-solid fa-dumbbell"></i>
                        </td>
                    </tr>
                    <tr class="stat">
                        <td>
                            Smidighet
                        </td>
                        <td>
                            {{stats["dexterity"]}}
                        </td>
                        <td>
                            <i class="fa-solid fa-user-ninja"></i>
                        </td>
                    </tr>
                    <tr class="stat">
                        <td>
                            Tur
                        </td>
                        <td>
                            {{stats["luck"]}}
                        </td>
                        <td>
                            <i class="fa-solid fa-clover"></i>
                        </td>
                    </tr>
                    <tr class="stat">
                        <td>
                            Hastighet
                        </td>
                        <td>
                            {{stats["speed"]}}
                        </td>
                        <td>
                            <i class="fa-solid fa-person-running"></i>
                        </td>
                    </tr>
                    <tr class="stat">
                        <td>
                            Uth√•llighet
                        </td>
                        <td>
                            {{stats["constitution"]}}
                        </td>
                        <td class="centered">
                            <i class="fa-solid fa-solid fa-heart-pulse"></i>
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    {% endfor %}

    {# {{dump(selection)}} #}
{% endblock %}
